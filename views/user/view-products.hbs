<section>
        <div class="container mt-5  ">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem; height: 28rem;" >
                <img class="card-img-top" src="/products-images/{{this._id}}.jpg" alt="Card image cap" style="height: 12rem;">
                 <div class="card-body">
                 <h5 class="card-title">{{this.Name}}</h5>
                 <p class="card-text">{{this.Description}}</p>
                 <p class="card-text">{{this.Category}}</p>
                 <p class="card-text">{{this.Price}}</p>
                  <a href="/login" class="btn btn-primary">add to cart</a>
               </div>
               </div>

             </div>

        {{/each}}
        </div>
        </div>
    </section>
  
